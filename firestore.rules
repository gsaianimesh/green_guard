rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.uid == 'FneDKEkGyUNcZ5IBWvU15dC89Ni2';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    match /trees/{treeId} {
      allow read: if true;
      
      allow create: if isAuthenticated() && 
                       request.resource.data.registered_by_uid == request.auth.uid;
      
      allow update: if isAuthenticated() && 
                       (resource.data.registered_by_uid == request.auth.uid || 
                        isAdmin());
      
      allow delete: if isAdmin();
    }
    
    match /users/{userId} {
      allow read: if true;
      
      allow create: if isAuthenticated() && 
                       userId == request.auth.uid;
      
      allow update: if isOwner(userId) || isAdmin();
      
      allow delete: if isAdmin();
    }
    
    match /watering_logs/{logId} {
      allow read: if isAuthenticated();
      
      allow create: if isAuthenticated() && 
                       request.resource.data.user_uid == request.auth.uid;
      
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

